{
    "name": "fs-match",
    "version": "1.4.0",
    "description": "A NodeJS package for finding folders, files & apps by Regular expression based on Asynchronous iteration of ES 9",
    "keywords": [
        "search",
        "filesystem",
        "regex-match",
        "command-line",
        "async",
        "iterator"
    ],
    "author": "shiy007@qq.com",
    "license": "LGPL-3.0",
    "homepage": "https://tech-query.me/fs-match/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/fs-match.git"
    },
    "bugs": {
        "url": "https://github.com/TechQuery/fs-match/issues"
    },
    "main": "dist/core.js",
    "bin": {
        "fs-match": "dist/find.js",
        "app-find": "dist/which.js"
    },
    "scripts": {
        "lint": "lint-staged",
        "test": "tsc  &&  typedoc  &&  jest --no-cache",
        "build": "lint-staged  &&  rm -rf dist/  &&  npm test",
        "prepublishOnly": "npm run build",
        "start": "typedoc  &&  open-cli docs/index.html"
    },
    "dependencies": {
        "commander": "^5.0.0",
        "fs-extra": "^9.0.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.1.0",
        "@types/jest": "^25.2.1",
        "@types/node": "^13.11.0",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "eslint": "^6.8.0",
        "husky": "^4.2.3",
        "jest": "^25.2.7",
        "lint-staged": "^10.1.2",
        "open-cli": "^6.0.1",
        "prettier": "^2.0.4",
        "ts-jest": "^25.3.1",
        "typedoc": "^0.17.4",
        "typescript": "^3.8.3"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json}": [
            "prettier --write"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "husky": {
        "pre-commit": "npm run lint",
        "pre-push": "npm run build"
    }
}
